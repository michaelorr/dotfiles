# focus window
shift + ctrl - left  : yabai -m window --swap west
shift + ctrl - down  : yabai -m window --swap south
shift + ctrl - up    : yabai -m window --swap north
shift + ctrl - right : yabai -m window --swap east

# rotate tree
shift + ctrl - space : yabai -m space --rotate 90

# prefix '='
shift + ctrl - 0x18  : yabai -m space --balance

# prefix '%'
shift + ctrl - 5       :   yabai -m space --mirror y-axis

# increase window size
shift + ctrl - h : yabai -m window --resize right:-15:0 && yabai -m window --resize left:-15:0
shift + ctrl - j : yabai -m window --resize bottom:0:15 && yabai -m window --resize top:0:15
shift + ctrl - k : yabai -m window --resize top:0:-15 && yabai -m window --resize bottom:0:-15
shift + ctrl - l : yabai -m window --resize right:15:0 && yabai -m window --resize left:15:0

# send window to space and follow
shift + ctrl - 0x2B : yabai -m window --space prev; yabai -m space --focus prev
shift + ctrl - 0x2F : yabai -m window --space next; yabai -m space --focus next

# send window to space and DONT follow
shift + ctrl + alt - 0x2B : yabai -m window --space prev
shift + ctrl + alt - 0x2F : yabai -m window --space next

# send window to monitor and follow
shift + ctrl - m : yabai -m window --display 1; yabai -m display --focus 1
shift + ctrl - b : yabai -m window --display 2; yabai -m display --focus 2

# create space, move window and follow focus
shift + ctrl - c : yabai -m space --create;\
                  id=$(yabai -m query --displays --display | grep "spaces");\
                  yabai -m window --space $(echo ${id:10:${#id}-10});\
                  yabai -m space --focus $(echo ${id:10:${#id}-10})
