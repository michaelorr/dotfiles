#!/usr/bin/env bash

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          autofocus
yabai -m config window_topmost               off
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on

# general space settings
yabai -m config layout                       bsp

if [[ $(yabai -m query --displays | jq '.[0].frame.w') -gt 1800 ]]; then
    yabai -m config top_padding                  50
    yabai -m config bottom_padding               50
    yabai -m config left_padding                 100
    yabai -m config right_padding                100
    yabai -m config window_gap                   50
else
    yabai -m config top_padding                  40
    yabai -m config bottom_padding               40
    yabai -m config left_padding                 40
    yabai -m config right_padding                40
    yabai -m config window_gap                   20
fi

echo "yabai configuration loaded.."
