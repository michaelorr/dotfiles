apt-get update
apt-get install ack-grep xclip man-db vim tree git zsh --yes
git clone https://github.com/michaelorr/dotfiles.git ~/.dot
git clone https://github.com/rupa/z.git ~/.dot/z
ln -s ~/.dot/z/z.1 /usr/share/man/man1/z.1  # osx only
ln -s ~/.dot/z/z.1i /usr/local/share/man/man1/z.1 # linux only
sudo chsh morr -s `which zsh`
git clone https://github.com/robbyrussell/oh-my-zsh.git ~/.dot/oh-my-zsh
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ~/.dot/oh-my-zsh/custom/plugins/zsh-syntax-highlighting
ln -s ~/.dot/michaelorr.zsh-theme ~/.dot/oh-my-zsh/themes/michaelorr.zsh-theme
ln -s ~/.dot/ackrc ~/.ackrc
ln -s ~/.dot/oh-my-zsh ~/.oh-my-zsh
ln -s ~/.dot/vim ~/.vim
ln -s ~/.dot/vimrc ~/.vimrc
ln -s ~/.dot/zprofile ~/.zprofile
ln -s ~/.dot/zshenv ~/.zshenv
ln -s ~/.dot/zshrc ~/.zshrc
ln -s ~/.dot/gitconfig ~/.gitconfig


clone https://github.com/rupa/z
add https://github.com/tpope/vim-commentary to the automated process

